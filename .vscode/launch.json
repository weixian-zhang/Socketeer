{
    "version": "0.2.0",
    "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name":  "Debug Main",
          "protocol": "inspector",
          "runtimeExecutable": "${workspaceFolder}/desktop/node_modules/.bin/electron",
          "args": [
            "--remote-debugging-port=9222",
              ".",
              "--inspect=5858"

          ],
          "windows": {
              "runtimeExecutable": "${workspaceFolder}/desktop/node_modules/.bin/electron.cmd"
          },
          "sourceMaps": true,
          "cwd": "${workspaceFolder}/desktop",
          "program": "${workspaceFolder}/desktop/dist/main.js",
          "outFiles": [
              "${workspaceFolder}/desktop/dist/*.js",
              "${workspaceFolder}/desktop/dist/**/*.js"
          ],
         "preLaunchTask": "TSC Build",
          "internalConsoleOptions": "openOnSessionStart",
          "outputCapture" : "std"
      },
      {
        "name": "Debug Renderer",
        "type": "chrome",
        "request": "launch",
        "runtimeExecutable": "${workspaceFolder}/desktop/node_modules/.bin/electron",
        "windows": {
          "runtimeExecutable": "${workspaceFolder}/desktop/node_modules/.bin/electron.cmd"
        },
        "runtimeArgs": [
          "${workspaceRoot}/desktop/dist/main.js",
          "--remote-debugging-port=9222"
        ],
        "webRoot": "${workspaceFolder}/desktop",
        "preLaunchTask": "TSC Build",
      }
    ],
    "compounds": [
      {
        "name": "Debug Main & Renderer",
        "configurations": [
          "Debug Main",
          "Debug Renderer"
        ]
      }
    ]
}