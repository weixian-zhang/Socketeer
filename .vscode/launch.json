{
    "version": "0.2.0",
    "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name":  "Desktop - Main",
          "protocol": "inspector",
          "runtimeExecutable": "${workspaceFolder}/desktop/node_modules/.bin/electron",
          "args": [
              "--remote-debugging-port=9222",
              ".",
              "--enable-debugging",
              "--enable-logging"
          ],
          "windows": {
              "runtimeExecutable": "${workspaceFolder}/desktop/node_modules/.bin/electron.cmd"
          },
          "sourceMaps": true,
          "cwd": "${workspaceFolder}/desktop",
          "program": "${workspaceFolder}/desktop/dist/main.js",
          "outFiles": [
              "${workspaceFolder}/desktop/dist/*.js",
              "${workspaceFolder}/desktop/dist/**/*.js"
          ],
         "preLaunchTask": "Background Webpack Serve",
          "internalConsoleOptions": "openOnSessionStart",
          "outputCapture" : "std"

      },
      {
        "name": "Desktop - Renderer",
        "type": "chrome",
        "request": "attach",
        "port": 9222,
        "webRoot": "${workspaceFolder}/desktop",
        "sourceMaps": true,
        "timeout": 15000
      }
    ],
    "compounds": [
      {
        "name": "Debug Main & Renderer",
        "configurations": [
          "Desktop - Main",
          "Desktop - Renderer"
        ]
      }
    ]
}