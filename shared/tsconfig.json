{
	"extends": "../tsconfig-base.json",
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext", "es2017"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"inlineSourceMap": true,
		"inlineSources":true,
		"jsx": "react",
		"baseUrl": "./",
		"outDir": "./dist",
		"rootDir": "src",
		"composite": true
	},
	"include": ["src", "../desktop/src/common/SocketInfo.ts"],
	"exclude": ["build",
        "node_modules",
        "typings/globals",
        "typings/modules",
		"dist",
		"tests"
	],
}