{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false,
      "jsx": "react",
      "sourceMap": true,
      "composite": true,
      "declaration": true,
      "declarationMap": true

    },
    "references": [
      { "path": "./desktop/" },
      { "path": "./shared/" }
    ],
    //"files": [] // if empty, .d.ts, source maps won;t be emitted
  }