{
	//"extends": "../tsconfig-base.json",
	"compilerOptions": {
	  "module": "commonjs",
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext", "es2017"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,

		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"inlineSourceMap": true,
		"inlineSources":true,
		//"sourceMap": true,
		// "declaration": true,
		// "declarationMap": true,
		"jsx": "react",
		"baseUrl": "./",
		"outDir": "./dist",
		"rootDir": "src",
		"composite": false
	},
	"include": ["src/**/*.ts", "node_modules/lodash-es/**/*.js"]
  }